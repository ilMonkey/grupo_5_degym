<!-- Include Head -->
<%- include('../partials/head', {title: 'Agregar una Clase'}) %>

<!-- Include Header -->
<%- include('../partials/header2', {usuario}) %>

<!-- product Form -->
<div class="container__product--box">
    <section class="container__product">
        <div class="container__product--title">
            <h2>Agregar Clases a Da Gym!</h2>
        </div>

            <form action="" class="container__product--form" method="POST">
                <!-- <div class="errors" style="background-color: rgb(141, 31, 31);">
                    <h3 class="error_text" style="color: rgb(197, 196, 196);">ERROR</h3>
                    <p style="color: black;">- El nombre de tu producto es muy largo (Max. 45 caracteres).</p>
                    <p style="color: black;">- La descripción es muy larga (Max. 150 caracteres).<br></p>
                </div> -->
                <form action="/products/<%= product.id %>?_method=PUT" method="POST" class="container__register--data" enctype = "multipar/form-data">
                    <input type="text" placeholder="Nombre" name="name" value="<%= product.name %> ">
                    <input type="text" placeholder="Precio" name="price" value="<%= product.price %> ">
                    <input type="text" placeholder="Profesor" name="instructor" value="<%= product.instructor %> ">
                    <select name="branch" size="1" >
                        <% branches.forEach(branch => { %>
                        <option value="<%= branch.id %>" <% branch.name == product.branch?'selected':null%>> <%= branch.name %> </option>
                        <% }); %> 
                    </select>
                    <select name="activity" size="1" >
                        <% activities.forEach(activity => { %>
                        <option value="<%= activity.id %>" <% activity.name == product.activity?'selected':null%>> <%= activity.name %> </option>
                        <% }); %> 
                    </select>
                    <!-- <input type="file" name="image"> -->
                    <select name="max_capacity" size="1"  >
                        <option value="1">Capacidad Maxima</option>
                        <option value="1">10</option>
                        <option value="2">15</option>
                        <option value="3">20</option>
                    </select>
                    <input type="text" placeholder="Dia y Hora" name="schedule" value="<%= product.days, product.time %> ">
                <div class="container__register--data-check">
                </div>
                <div class="container__register--send">
                    <button type="submit" class="btn btn-warning">Guardar Clase</button>
                </div>class="container__product--form-check" >
                            <input  type='radio' value='efectivo' name='pay'>Efectivo
                            <input type='radio' value='credito' name='pay'>Tarjeta crédito
                            <input type='radio' value='debito' name='pay'>Debito
                        </div>
                        <label for="">Cantidad máxima de alumnos:</label>
                        <select  name="max_capacity" size="1" >
                            <option value="1"> 5</option>
                            <option value="2"> 10</option>
                            <option value="3"> 15</option>
                            <option value="4"> 20</option>
                            <option value="5"> 25</option>
                            <option value="6"> 30</option>
                        </select>
                        <label>Requisitos</label>
                        <div  class="container__product--form-check" >
                            <input type='checkbox' value='apto' name='requisitos'>Apto Fisico
                            <input type='checkbox' value='max18' name='requisitos'>Mayor de 18 años
                            <input type='checkbox' value='especial' name='requisitos'>Permiso especial
                        </div>
                    <div class="container__product--data-check">
                    </div>
                    <div class="container__product--send">
                        <button type="button" class="btn btn-warning">Guardar Clase</button>
                    </div>
            </form>
        </div>
    </section>
</div>
<!-- End product Form -->

<!-- Include Footer -->
<%- include('../partials/footer') %>