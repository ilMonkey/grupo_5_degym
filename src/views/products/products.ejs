<!-- -------------------------------------------PRODUCTS (CLASES DE GyM Y STAFF)--------------------- -->
<section class= "poductsPage">
    <section class= "bodyProduct">
            <!-- BANER VERTICAL DE PUBLICIDAD -->
            <div class= "verticalAd__container">
                <img class= "verticalBanner" src="/images/banners/shoes.jpg" alt="reebok running shoes">
            </div>
          
            <!-- CLASES DE GYM -->
        <section class="class__container">
            <h2>Agregá a tu carrito el pase mensual de la clase que quieras.</h2>
 
            <div class="class__container-multiGrid"> 
                
                <% products.forEach(product => { %>
                    <!-- Una clase individual -->
                    <article class="individualClass__container">
                        <div class= "classImgBox">
                            <img src="/images/actividades/<%- product.image %> " alt="yoga">
                            <div class="middleImgBox">
                                <a href="/products/<%= product.id %>"><button class="btn btn-primary">Ver más</button></a>
                            </div>
                        </div>
                        <div class="classTextBox">
                            <h3><%- product.name %></h3>
                            <p><%- product.description %></p>
                        </div>
                    </article>                 
                <% }) %>

            </div>
        </section>

    </section>

