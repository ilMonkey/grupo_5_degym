    <!-- Register Form -->
    <div class="container__register--box">
        <section class="container__register">
            <div class="container__register--title">
                <h2>Registrarse</h2> 
            </div> 
                <form action="/users/create" enctype="multipart/form-data"class="container__register--data" method="POST">
                <!-- Codigo para mostrar errores -->
                <% if(typeof errors != 'undefined'){ %>
                    <%errors.forEach(error => {%>
                        <p><%= error.msg %></p>
                    <%})%>  
                <%}%> 
                <!-- Termina codigo para mostrar errores -->
                            <input type="text" placeholder="Nombre*" name="first_name" class="miInput">
                            <input type="text" placeholder="Apellido*" name="last_name" class="miInput">
                            <input type="text" placeholder="Masculino | Fememnino | Otro" name="genre" class="miInput">
                            <input type="date" placeholder="dd/mm/aaaa" name="birth_day" class="miInput">
                            <input type="number" placeholder="Teléfono" name="mobile_number" class="miInput">
                            <input type="file" name="avatar" id="foto" class="miInput">
                            <input type="email" placeholder="Email*" name="email" class="miInput">
                            <input type="password" placeholder="Contraseña*" name="password" class="miInput">
                            <input type="password" placeholder="Repetir Contraseña*" name="sub_password" class="miInput">
                        <div class="container__register--data-check">
                            <label>
                            <a href="#">Leer Terminos y Condiciones</a>
                            </label> 
                        </div>
                        <div class="container__register--send">
                            <button type="submit" class="btn btn-warning">Enviar</button>
                        </div>
                </form>
            </div>
        </section>
    </div>
    
<!-- End Register Form -->

